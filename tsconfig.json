{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "bin"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./**/*.test.ts"
  ]
}
